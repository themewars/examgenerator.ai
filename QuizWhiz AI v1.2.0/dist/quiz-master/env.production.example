# ExamGenerator.ai - Production Environment Configuration
# Copy this to .env and update with your actual values

APP_NAME="ExamGenerator AI"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://examgenerator.ai

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=examgenerator_ai
DB_USERNAME=examgenerator_user
DB_PASSWORD=your_secure_password_here

# Redis Configuration (Optional - for caching)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@examgenerator.ai
MAIL_PASSWORD=your_app_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@examgenerator.ai
MAIL_FROM_NAME="ExamGenerator AI"

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Google Gemini Configuration (Alternative AI)
GEMINI_API_KEY=your_gemini_api_key_here

# Payment Gateways
RAZORPAY_KEY=your_razorpay_key_here
RAZORPAY_SECRET=your_razorpay_secret_here

STRIPE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET=your_stripe_secret_key_here

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=live

# File Storage
FILESYSTEM_DISK=public
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration
CACHE_DRIVER=database
CACHE_PREFIX=

# Queue Configuration
QUEUE_CONNECTION=database

# Broadcasting Configuration
BROADCAST_DRIVER=log
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Security Configuration
SANCTUM_STATEFUL_DOMAINS=examgenerator.ai,www.examgenerator.ai
SESSION_DOMAIN=.examgenerator.ai

# Application Specific
EXAM_DEFAULT_QUESTIONS=10
EXAM_MAX_QUESTIONS=50
EXAM_TIME_LIMIT=30
EXAM_SHOW_ANSWER=true

# OCR Configuration (for image processing)
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng

# File Upload Limits
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE=local

# Monitoring
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Social Login (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://examgenerator.ai/auth/google/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=https://examgenerator.ai/auth/facebook/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=https://examgenerator.ai/auth/github/callback

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# CDN Configuration (Optional)
CDN_URL=https://cdn.examgenerator.ai
CDN_ENABLED=false

# API Configuration
API_RATE_LIMIT=1000
API_VERSION=v1

# Notification Configuration
NOTIFICATION_EMAIL=true
NOTIFICATION_SMS=false
NOTIFICATION_PUSH=false

# Feature Flags
FEATURE_OCR_ENABLED=true
FEATURE_EXPORT_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_SOCIAL_LOGIN_ENABLED=false
FEATURE_PAYMENT_ENABLED=false
